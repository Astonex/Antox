<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/test_bg"
    android:fillViewport="true"
    android:gravity="top">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_bg"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:paddingBottom="@dimen/margin_large"
        android:paddingLeft="@dimen/margin_large"
        android:paddingRight="@dimen/margin_large"
        android:paddingTop="@dimen/margin_large">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="Antox Logo"
            android:src="@drawable/full_logo" />

        <Spinner
            android:id="@+id/login_account_name"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@drawable/edittextbackground"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/login_login_button"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="#414141"
            android:onClick="onClickLogin"
            android:text="@string/login_login"
            android:textColor="@color/white" />


        <Button
            android:id="@+id/login_create_button"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="#3FA831"
            android:onClick="onClickCreateAccount"
            android:text="@string/login_create_account_text"
            android:textColor="@color/white" />
    </LinearLayout>
</ScrollView>